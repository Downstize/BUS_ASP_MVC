@{
    ViewData["Title"] = "Выбор таблицы";
}

<h2>Выберите таблицу для работы</h2>

<form asp-controller="Data" asp-action="Index" method="get">
    <div class="form-group">
        <label for="table">Таблица:</label>
        <select class="form-control" id="table" name="table">
            <option value="TransportCompany">Транспортные компании</option>
            <option value="BusType">Модели автобусов</option>
            <option value="VehicleType">Список авто</option>
            <option value="StopAmmount">Список остановок</option>
            <option value="RouteList">Список маршрутов</option>
            <option value="PointList">Список промежуточных остановок</option>
            <option value="DriverList">Список водителей</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary custom-button">Выбрать</button>
</form>